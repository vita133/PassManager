<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_CLIPBOARD" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PassManager"
        tools:targetApi="31">
        <activity
            android:name=".login.screens.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.screens.MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".login.screens.SignupActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".login.screens.GenerationActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".login.screens.EditActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>